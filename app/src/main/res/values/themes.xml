<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_dark_200</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/color_dark_200</item>
    </style>

    <style name="TextBold">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextExtraBold">
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextSemiBold">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextMedium">
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextRegular">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextStyleDayOfWeekCal" parent="TextBold">
        <item name="android:textColor">@color/color_grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>